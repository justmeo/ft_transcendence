# ===========================================
# ft_transcendence Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# Server Configuration
API_PORT=3000
API_HOST=0.0.0.0
PROXY_PORT=443
HTTP_REDIRECT_PORT=80
NODE_ENV=development

# Database Configuration  
DATABASE_URL=sqlite:./db/database.db

# Security Configuration (REQUIRED IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-too
COOKIE_SECRET=your-super-secret-cookie-signing-key

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration (if needed)
CORS_ORIGIN=https://localhost
CORS_CREDENTIALS=true

# SSL/TLS Configuration
FORCE_HTTPS=true
TRUST_PROXY=true

# Application Configuration
APP_NAME=ft_transcendence
APP_VERSION=1.0.0

# Development Configuration
DEBUG=false
LOG_LEVEL=info

# Future WebSocket Configuration
WS_ENABLED=false
WS_PORT=3001

# OAuth Configuration (for future use)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=  
OAUTH_GITHUB_CLIENT_SECRET=

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379